[alias]
	fixup = !sh -c 'git commit --fixup=$1' -
	squash = !sh -c 'git commit --squash=$1' -
	squashall = !sh -c 'git reset --hard @{u} && git merge --squash @{1} && git commit ' -

	bi = bisect
	br = branch
	co = checkout

	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	cpq = cherry-pick --quit
	cps = cherry-pick --skip

	ci = commit
	amend = commit --amend --no-edit
	amend-message = commit --amend

	cfg = config
	gcfg = config --global

	df = diff -M -w
	dfu = diff -M -w -R @{u}
	dfw = diff -M -w --word-diff
	dfc = df --cached
	dfcu = dfu --cached
	dfcw = dfw --cached
	changed = diff --find-renames --ignore-all-space --name-status
	dfsm = diff --find-renames --ignore-all-space --submodule --ignore-submodules=none
	dt = difftool
	dty = difftool -y

	lg = log --oneline --graph -15
	lga = log --all --oneline --graph
	lgu = lg @{u}^..
	ls = log --pretty=format:%C(yellow)%h\\ %C(green)[%ad]%C(auto)%d\\ %Creset%s%Cblue\\ [%an] --date=relative -10
	lsu = ls @{u}^.. -100000
	lsg = ls --graph
	ll = log --pretty=format:%C(yellow)%h%C(auto)%d\\ %Creset%s%Cblue\\ [%an|%ad] --numstat --summary --date=relative -5
	llu = ll @{u}^..
	lu = log --oneline @{u}^..
	lc = "!f() { git ll $1^..$1; }; f"
	lnc = log --pretty=format:%h\\ %s\\ [%cn]
	filelog = log -u
	fl = filelog
#	log = log --simplify-merges

	m = merge
	mt = mergetool
	mty = mergetool -y

	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --interactive --autosquash
	rbs = rebase --skip

	remotes = remote -v
	up = remote update
	upp = remote update -p

	force-push = push --force-with-lease

	discard = reset --hard HEAD^
	hardreset = reset --hard
	unstage = reset HEAD --
	undo = reset ORIG_HEAD

	shw = show -M -w
	last = show

	pop = stash pop
	st = status -sb
	swap = checkout @{-1}
	tags = tag -l
	wt = worktree
[color]
	ui = auto
[column]
	ui = auto
[core]
	autocrlf = input
	safecrlf = warn
	ignorecase = false
#[credential]
#	helper = osxkeychain
#[init]
#	defaultBranch = master
[interactive]
	singlekey = true
[merge]
	defaulttoupstream = true
	log = true
[mergetool]
	keepbackup = false
[rebase]
	autosquash = true
[rerere]
	enabled = true
[branch]
	autoSetupRebase = always
[pull]
	ff = only
[push]
	default = current
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[branch "master"]
	remote = upstream
	pushRemote = origin
