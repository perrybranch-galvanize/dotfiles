alias asroot="sudo -u root"

psgrep()
{
	ps auxw | grep "$1" | grep -v "grep $1"
}
alias psg=psgrep

alias cls="clear"
alias ..='cd ..'
alias ...='cd ..; cd ..'

alias ls='ls -F'
alias l.='ls -d .*'
alias ll.='ls -dl .*'
alias la='ls -A'
alias ll='ls -l'
alias lla='ls -lA'

alias md='mkdir'
alias rd='rmdir'

alias vi='vim'

alias which='alias | /usr/bin/which --tty-only --read-alias --show-dot --show-tilde'

# vvvvv aliases to be organized and documented vvvvv

